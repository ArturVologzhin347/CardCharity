<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.CardCharity.Base" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowActivityTransitions">true</item>
        <!--Only for Xiaomi-->
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>

        <item name="bottomSheetDialogTheme">@style/CustomBottomSheetDialog</item>
    </style>

    <style name="Theme.CardCharity.Day" parent="Theme.CardCharity.Base">
        <item name="colorPrimary">@color/tory_blue</item>
        <item name="colorAccent">@color/indigo</item>
        <item name="colorError">@color/shiraz</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:colorPrimaryDark">@color/zircon</item>
        <item name="android:windowBackground">@color/zircon</item>
        <item name="colorControlNormal">@color/black</item>

        <!-- Navigation Bar -->
        <item name="android:navigationBarColor">@color/zircon</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>

        <!--Status bar-->
        <item name="android:statusBarColor">@color/zircon</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>

        <!-- Attrs -->
        <item name="color_background">@color/zircon</item>
        <item name="color_on_background">@color/black</item>
        <item name="color_toolbar">@color/tory_blue</item>
        <item name="color_toolbar_title">@color/white</item>
        <item name="color_divider">@color/divider_dark</item>

        <!--Component styles-->
        <item name="toolbarStyle">@style/ToolBar.Day</item>
    </style>

    <style name="Theme.CardCharity.Night" parent="Theme.CardCharity.Base">
        <item name="colorPrimary">@color/periwinkle_gray</item>
        <item name="colorAccent">@color/twilight_blue</item>
        <item name="colorError">@color/cranberry</item>
        <item name="colorSurface">@color/big_stone</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:colorPrimaryDark">@color/mirage</item>
        <item name="android:windowBackground">@color/mirage_light</item>
        <item name="colorControlNormal">@color/white</item>

        <!-- Navigation Bar -->
        <item name="android:navigationBarColor">@color/mirage</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>

        <!--Status bar-->
        <item name="android:statusBarColor">@color/mirage</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>

        <!-- Attrs -->
        <item name="color_background">@color/mirage_light</item>
        <item name="color_on_background">@color/white</item>
        <item name="color_toolbar">@color/big_stone</item>
        <item name="color_toolbar_title">@color/white</item>
        <item name="color_divider">@color/divider_light</item>

        <!--Component styles-->
        <item name="toolbarStyle">@style/ToolBar.Night</item>
    </style>


    <style name="Theme.CardCharity.Fullscreen.Day" parent="Theme.CardCharity.Day">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <style name="Theme.CardCharity.Fullscreen.Night" parent="Theme.CardCharity.Night">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
    </style>


    <style name="PopupMenu" parent="Widget.AppCompat.PopupMenu">
        <item name="android:textColor">?attr/color_on_background</item>
        <item name="android:itemBackground">?attr/color_background</item>
    </style>


    <style name="ToolBar.Day" parent="Widget.MaterialComponents.Toolbar">
        <item name="titleTextColor">@color/black</item>
        <item name="android:background">@color/zircon</item>
        <item name="elevation">0dp</item>
        <item name="titleCentered">false</item>
        <item name="titleTextAppearance">@style/collapsingToolbarLayoutTitle</item>
    </style>


    <style name="ToolBar.Night" parent="Widget.MaterialComponents.Toolbar">
        <item name="titleTextColor">@color/white</item>
        <item name="android:background">@color/big_stone</item>
        <item name="elevation">0dp</item>
        <item name="titleCentered">false</item>
        <item name="titleTextAppearance">@style/collapsingToolbarLayoutTitle</item>
    </style>

    <style name="collapsingToolbarLayoutTitle" parent="ToolBar.Day">
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textColor">?attr/color_toolbar_title</item>
    </style>

    <style name="expendedToolbarLayoutTitle" parent="ToolBar.Day">
        <item name="android:textSize">34sp</item>
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textColor">?attr/color_toolbar_title</item>
    </style>

    <style name="CustomBottomSheetDialog" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheet</item>

    </style>

    <style name="CustomBottomSheet" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/CustomShapeAppearanceBottomSheetDialog</item>
        <item name="backgroundTint">?colorSurface</item>
    </style>

    <style name="CustomShapeAppearanceBottomSheetDialog" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">24dp</item>
        <item name="cornerSizeTopLeft">24dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

</resources>