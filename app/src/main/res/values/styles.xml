<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.CardCharity.Base" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowActivityTransitions">true</item>
        <!--Only for Xiaomi-->
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>

        <item name="colorPrimary">@color/accent</item>
        <item name="colorAccent">@color/accent</item>


    </style>

    <style name="Theme.CardCharity.Day" parent="Theme.CardCharity.Base">
        <item name="color_accent">@color/accent</item>
        <item name="color_surface">@color/light_grey</item>
        <item name="color_on_surface">@color/dark_grey</item>

        <item name="android:windowBackground">@color/light_grey</item>
        <item name="colorControlNormal">@color/dark_grey</item>

        <!--Status bar-->
        <item name="android:statusBarColor">@color/light_grey</item>


        <!--Status bar-->
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>

        <!--Component styles-->
        <item name="toolbarStyle">@style/ToolBar.Day</item>
    </style>

    <style name="Theme.CardCharity.Night" parent="Theme.CardCharity.Base">
        <item name="color_accent">@color/accent</item>
        <item name="color_surface">@color/dark_grey</item>
        <item name="color_on_surface">@color/white</item>

        <item name="android:windowBackground">@color/dark_grey</item>
        <item name="colorControlNormal">@color/white</item>

        <!--Status bar-->
        <item name="android:statusBarColor">@color/dark_grey</item>


        <!--Status bar-->
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>

        <!--Component styles-->
        <item name="toolbarStyle">@style/ToolBar.Night</item>
    </style>


    <style name="ToolBar.Day" parent="Widget.MaterialComponents.Toolbar">
        <item name="titleTextColor">@color/dark_grey</item>
        <item name="android:background">@color/light_grey</item>
        <item name="elevation">0dp</item>
        <item name="titleCentered">false</item>
        <item name="titleTextAppearance">@style/collapsingToolbarLayoutTitle</item>
    </style>


    <style name="ToolBar.Night" parent="Widget.MaterialComponents.Toolbar">
        <item name="titleTextColor">@color/white</item>
        <item name="android:background">@color/dark_grey</item>
        <item name="elevation">0dp</item>
        <item name="titleCentered">false</item>
        <item name="titleTextAppearance">@style/collapsingToolbarLayoutTitle</item>

    </style>

    <style name="collapsingToolbarLayoutTitle" parent="ToolBar.Day">
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textColor">?attr/color_on_surface</item>

    </style>

    <style name="expendedToolbarLayoutTitle" parent="ToolBar.Day">
        <item name="android:textSize">34sp</item>
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textColor">?attr/color_on_surface</item>

    </style>
</resources>